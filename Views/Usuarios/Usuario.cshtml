@model prova2.Models.Usuario

@{
    ViewData["Title"] = "Usuario";
}
<h1 class="display-4">Usuario</h1>
<h4>Cadastro</h4>
<div class="row">
    <div class="col-md-4">
        @ViewData["mensagem"]
        <form asp-action="Usuario" asp-controller="Usuarios" enctype="multipart/form-data">
            <div class="form-group">
                @Html.LabelFor(model => model.Login)
                @Html.TextBoxFor(model => model.Login, new {@class="form-control" })
                @Html.ValidationMessageFor(model => model.Login)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Senha)
                @Html.TextBoxFor(model => model.Senha, new {@class="form-control"})
                @Html.ValidationMessageFor(model => model.Senha)
            </div>
            <input type="submit" value="Salvar" class="btn btn-success" style="margin-top: 20px;" />
        </form>
    </div>
</div>
